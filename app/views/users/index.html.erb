<div class="user" id="user-new">
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m9"><h1><%= @team.team_name %></h1></div>
            <div class="col s12 m3"><i class="material-icons large">portrait</i></div>
          </div>
        </div>
        <div class="card-content">
          <table>
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %><%= user.id %></td>
                <td><%= user.last_name %></td>
                <%= form_for user do |u|%>
                 <td id='<%= user.id %>' class="selected_role">
                  <div class="input-field" >
                    <%= u.select :role, options_for_select([['admin', 'admin'], ['manager', 'manager'], ['employee', 'employee']], :selected => user.role), :id => user.id %>
                  </div>
                </td>
                <td><%= u.submit 'Save' %></td>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                <td><%= link_to 'Destroy', user, method: :delete %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-action">
          <div class="row center-align">
            <div class="col s12 m4">
              <%= link_to 'Back', sessions_path %>
            </div>
            <div class="col s12 m4">
            </div>
            <div class="col s12 m4">
            </div>
            <div class="col s12 m12">
              <% if current_user != nil %>
              Signed in as <%= current_user.first_name.capitalize %> | <%= link_to "Logout", '/logout' %>
              <% else %>
              <% login_path %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
